create table company
(
    companyId   int generated by default as identity primary key,
    name        varchar(50) not null,
    phoneNumber varchar(20) not null unique,
    city        varchar(50) not null,
    country     varchar(50) not null,
    address     varchar(50) not null,
    email       varchar(50) not null,
    website     varchar(20),
    comment     varchar(250),
    typeCompany varchar(50) not null,
    creation    time        not null

);
alter table company add contactId int references contact(contactId);
create table contact
(
    contactId   int generated by default as identity primary key,
    name        varchar(50) not null,
    surname     varchar(50) not null,
    phoneNumber varchar(20) not null unique,
    city        varchar(50) not null,
    country     varchar(50) not null,
    address     varchar(50) not null,
    email       varchar(50) not null,
    postOn      varchar(50) not null,
    post        varchar(50) not null

);
alter table contact add companyId int references company(companyId);
create table employee
(
    employeeId  int generated by default as identity primary key,
    name        varchar(50)                   not null,
    surname     varchar(50)                   not null,
    phoneNumber varchar(20)                   not null unique,
    city        varchar(50)                   not null,
    country     varchar(50)                   not null,
    address     varchar(50)                   not null,
    email       varchar(50)                   not null,
    postOn      varchar(50)                   not null,
    post        varchar(50)                   not null,
    age         int check ( age > 0 )         not null,
    birth       timestamp  not null

);
alter table employee add companyId int references company(companyId);
create table action
(
    actionId   serial primary key,
    name       varchar(50) not null,
    TypeAction varchar(50)
);
alter table action add taskId int references task(taskId);
create table status
(
    statusId   int generated by default as identity primary key,
    name       varchar(50) not null,
    TypeStatus varchar(50)
);
alter table status add taskId int references task(taskId);

create table task
(
    taskId      int generated by default as identity primary key,
    name        varchar(50) not null,
    description varchar(500),
    creation    timestamp,
    start       timestamp,
    ending      timestamp
);
alter table task add actionId int references action (actionId);
alter table task add statusId int references status (statusId);
alter table task add companyId int references company(companyId);
alter table task add employeeId int references employee(employeeId);
